<h4 class="text-center">Gallina: <%=@gallina.name%></h4>
<h3>Reviewing <%=@reviewed.email%></h3>
<div class="feedback-top">
<h2>Metrics</h2>
<hr/>
<%=form_tag "/gallinas/reviewed", method: :post do%>
<input name="gallina_id" value="<%=@gallina.id%>" type="hidden"/>
<input name="reviewed_id" value="<%=@reviewed.id%>" type="hidden"/>
<% @gallina.metrics.each do |metric| %>
  <b>
    <%= metric.name %>
  </b>
  <i>
    <%= metric.description %>
  </i>
  (weight: <%= metric.weight %>)
  <br>

  <ul>
    <% metric.questions.each do |question| %>
      <div class="panel panel-success">
        <div class="panel-heading">
          <%= question.sentence %>
        </div>
        <div class="panel-body">
          <ul>
            <li>
              <%= question.wanted_statement %>
            </li>
            
            <div class="row center-block text-justify">
              <% 10.times do |v| %>
                <div class="col-md-1">
                  <i><%=v+1%></i></br>
                  <%= radio_button_tag "questions[#{question.id}]", v+1 %>
                </div>
              <% end %>
            </div>
            <li>
              <%= question.not_wanted_statement %>
            </li>
            </br>
          </ul>
        </div>
      </div>
    <% end %>
  </ul>

<% end %>
<button type="submit" class="btn btn-primary"><%=t('Save')%></button>
<% end %>
</div>