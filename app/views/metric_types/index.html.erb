<p id="notice"><%= notice %></p>

<h1>Listing Metric Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metric_types.each do |metric_type| %>
      <tr>
        <td><%= metric_type.name %></td>
        <td><%= link_to 'Show', metric_type %></td>
        <td><%= link_to 'Edit', edit_metric_type_path(metric_type) %></td>
        <td><%= link_to 'Destroy', metric_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

