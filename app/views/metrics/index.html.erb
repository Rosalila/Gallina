<p id="notice"><%= notice %></p>

<h1>Listing Metrics</h1>

<table>
  <thead>
    <tr>
      <th>Gallina</th>
      <th>Name</th>
      <th>Description</th>
      <th>Weight</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metrics.each do |metric| %>
      <tr>
        <td><%= metric.gallina_id %></td>
        <td><%= metric.name %></td>
        <td><%= metric.description %></td>
        <td><%= metric.weight %></td>
        <td>
          <% if metric.metric_type %>
            <%= metric.metric_type.name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', metric %></td>
        <td><%= link_to 'Edit', edit_metric_path(metric) %></td>
        <td><%= link_to 'Destroy', metric, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Metric', new_metric_path %>
